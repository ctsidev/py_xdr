-- ADT
DROP TABLE xdr_<<PROJECT_ID>>_adt PURGE;
CREATE TABLE xdr_<<PROJECT_ID>>_adt AS
SELECT DISTINCT t.pat_id
    ,t.pat_mrn_id
    ,t.ip_patient_id
    ,adt.pat_enc_csn_id
    ,adt.event_type
    ,adt.in_event_id
    ,adt.department_id
    ,adt.department_name
    ,adt.specialty                      department_specialty                 
    ,adt.time_in
    ,adt.time_out
    ,adt.out_event_id
    ,adt.adm_event_id
    ,adt.dis_event_id
FROM xdr_<<PROJECT_ID>>_<<LINK_TBL>>    t
LEFT JOIN i2b2.lz_clarity_adt           adt ON t.<<LINK_COL>> = adt.<<LINK_COL>>
;